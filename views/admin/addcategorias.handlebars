{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{/each}}

{{#if salvo}}
    <div class="alert alert-success">
        Salvo com sucesso!
    </div>
{{/if}}

<h3>Nova categoria:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/add" method="post">
            <label for="nome">Nome: </label>
            <input
                type="text"
                id="nome"
                name="nome"
                placeholder="Nome da categoria"
                class="form-control"
                value="{{body.nome}}"
            />
            <label for="nome">Slug: </label>
            <input
                type="text"
                id="slug"
                name="slug"
                placeholder="slug da categoria"
                class="form-control"
                value="{{body.slug}}"
            />
            <br />
            <button type="submit" class="btn btn-success">Criar categoria</button>
        </form>

    </div>
</div>