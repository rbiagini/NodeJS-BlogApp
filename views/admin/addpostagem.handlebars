{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Nova postagem:</h4>
        <form action="/admin/postagens/add" method="post">
            <label for="titulo">Titulo: </label>
            <input
                type="text"
                name="titulo"
                id="titulo"
                class="form-control"
                value="{{body.titulo}}"
            />
            <label for="slug">Slug: </label>
            <input
                type="text"
                name="slug"
                id="slug"
                class="form-control"
                value="{{body.slug}}"
            />
            <label for="descricao">Descrição: </label>
            <input
                type="text"
                name="descricao"
                class="form-control"
                value="{{body.descricao}}"
            />
            <label for="conteudo">Conteúdo: </label>
            <textarea
                name="conteudo"
                class="form-control"
            >{{body.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-select">
                <option value="0">Nenhuma categoria selecionada</option>
                {{#each categorias}}
                    {{#when ../body.categoria "eq" _id}}
                        <option
                            value="{{_id}}"
                            selected="selected"
                        >{{nome}}</option>
                    {{/when}}

                    {{#when ../body.categoria "noteq" _id}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{/when}}
                {{else}}

                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-2">Criar postagem</button>
        </form>
    </div>
</div>

<script lang="javascript" src="/js/auxFunctions.js"></script>
<script lang="javascript">
    setSlug("titulo", "slug");
</script>