<div class="card">
    <form action="/usuarios/login" method="post">
        <div class="card-body">
            <h5 class="card-title">Login: </h5>
            <label for="email">E-mail: </label>
            <input
                type="email"
                name="email"
                id="email"
                class="form-control"
                required
            />
            <label for="senha">Senha: </label>
            <input
                type="password"
                name="senha"
                id="senha"
                class="form-control"
                required
            />
            <button type="submit" class="btn btn-success mt-3">Fazer login</button>
        </div>
    </form>
</div>